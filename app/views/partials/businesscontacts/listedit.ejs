<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title %>
            </h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= businessContacts._id %>">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Name" name="name"
                        value="<%= businessContacts.name %>" required>
                </div>

                <div class="form-group">
                    <label for="phoneNumber">Phone</label>
                    <input type="tel" class="form-control" id="phone" placeholder="xxx-xxx-xxxx"
                        pattern="[0-9]{3}[0-9]{3}[0-9]{4}" name="phone" value="<%= businessContacts.phone %>" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label></label>
                    <input type="email" class="form-control" id="email" placeholder="Enter Email Address" name="email"
                        value="<%= businessContacts.email %>" required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit
                </button>

                <a href="/business-contact-list" class="btn btn-warning">
                    <i class="fas fa-edit"></i>Cancel
                </a>


        </div>
    </div>
</div>