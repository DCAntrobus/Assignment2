<div class="container">
    <h1>Business Contact List </h1>
    <a href="/business-contact-add" class="btn btn-dark" role="button">
        <i class="fas fa-plus-circle"></i>Add A Business Contact
    </a>

    <div class="row">
        <div class="col">

            <table class="table table-striped table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Company</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessContactsList" class="p-3 mb-2 bg-secondary text-white">
                    <!-- Repeatable Rows -->
                    <% for(let count=0; count < bContacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center">
                                <%= count + 1 %>
                            </th>
                            <td>
                                <%= bContacts[count].name %>
                            </td>
                            <td>
                                <%= bContacts[count].phone%>
                            </td>
                            <td>
                                <%= bContacts[count].email %>
                            </td>
                            <td>
                                <%= bContacts[count].company %>
                            </td>
                            <td class="text-center col-1">
                                <a href="/business-contact-edit/<%=bContacts[count]._id %>" class="btn btn-dark btn-sm">
                                    <i class="fas fa-pencil-alt">Edit</i>
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/business-contact-delete/<%=bContacts[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt">Delete</i>
                                </a>
                            </td>
                            <% } %>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>